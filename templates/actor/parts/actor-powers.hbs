<ol class='items-list'>
  {{#each powers as |powers powerLevel|}}
    <li class='items-header grid grid-11col'>
      <div class='grid-span-3'>
      <div class='item-name'> {{localize 'INDINDOMINANT_PPIET.Item.Power.PowerLVL' level=powerLevel}}
      </div>
      </div>
      <div class='grid-span-1'><div class='item-ap'>{{localize 'AP'}}</div></div>
      <div class='grid-span-1'><div class='item-type'>{{localize 'Type'}}</div></div>
      <div class='grid-span-1'><div class='item-cktyp'>{{localize 'Check'}}</div></div>
      <div class='grid-span-1'><div class='item-ckval'>{{localize 'Value'}}</div></div>
      <div class='grid-span-3'><div class='item-damformula'>{{localize 'Descriptor'}}</div></div>
      <div class='grid-span-1'><div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Power'}}'
          data-type='power'
          data-power-level='{{powerLevel}}'
        >
          <i class='fas fa-plus'></i>
          {{localize 'INDINDOMINANT_PPIET.Item.Power.AddLVL' level=powerLevel}}
        </a>
      </div>
      </div>
    </li>
    {{#each powers as |item id|}}
      <li class='item grid grid-11col' data-item-id='{{item._id}}'>
        <div class='grid-span-3'>
          <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              /></a>
          </div>
          
          <h4>{{item.name}}</h4>
          </div>
        </div>
      <div class='grid-span-1'><div class='item-ap item-prop'>{{item.system.ap}}</div></div>
      <div class='grid-span-1'><div class='item-type item-prop'>{{item.system.type}}</div></div>
      <div class='grid-span-1'><div class='item-cktyp item-prop'>{{item.system.cktyp}}</div></div>
      <div class='grid-span-1'><div class='item-ckval item-prop'>{{item.system.ckval}}</div></div>
      <div class='grid-span-3'><div class='item-damformula item-prop'>{{item.system.damformula}}</div></div>
      {{!--<div class='item-dmod item-prop'>{{localize 'INDINDOMINANT_PPIET.Cstat.Dmod.long'}}</div>--}}
    




        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Edit" type='power'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='power'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
    {{/each}}
  {{/each}}
</ol>